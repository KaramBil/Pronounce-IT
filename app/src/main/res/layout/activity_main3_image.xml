<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main1bg"
    tools:context="com.example.fady.BILAMI.Main3ActivityImage">

    <LinearLayout
        android:id="@+id/Linearrr"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginStart="3dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/lesbars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linBest"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="end"
            android:background="@drawable/ratingdr">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Best Score:"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <RatingBar

                android:id="@+id/bestscore"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="0"
                android:progressTint="@color/colorAccent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linact"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ratingdr">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Recent Score:"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:numStars="0"
                android:progressTint="@color/colorAccent" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:id="@+id/jet"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jetonnbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold|italic"

            />
        <Button
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:id="@+id/jetonimg"
            android:background="@drawable/goldentoken"
           />



    </LinearLayout>

    <Button
        android:layout_width="60dp"
        android:id="@+id/Pause"
        android:layout_height="60dp"
        android:background="@drawable/cerclenoir"
        android:foreground="@drawable/settingcle"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"


        />
</RelativeLayout>



//////////////////////////////////////////////

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:id="@+id/imgbtns"
    android:layout_gravity="center"
    android:background="@drawable/quizbg">

        <ImageView
    android:id="@+id/IV"
    android:layout_marginTop="10dp"
    android:padding="5dp"

    android:layout_width="270dp"
    android:layout_height="270dp"
    android:scaleType="fitXY"
    android:layout_gravity="center"/>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/precedent"

                android:background="@drawable/back"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="precedent"
                />

            <Button
                android:id="@+id/start"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@drawable/start"
                android:onClick="startClick" />
            <Button
                android:id="@+id/suivant"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="suivant"
                android:textAlignment="center"
                android:background="@drawable/next"
               />


        </LinearLayout>
</LinearLayout>

        <TextView
            android:id="@+id/aprononcer"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="TextView"
            android:singleLine="true"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:background="@drawable/text"
            android:textColor="@color/white"
                 />





        <TextView
            android:id="@+id/aprononcer1"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="30dp"
            android:text="TextView"

            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
       android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/text"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />
    </LinearLayout>






    <TextView
        android:id="@+id/caption_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:visibility="invisible"/>



    </RelativeLayout>

