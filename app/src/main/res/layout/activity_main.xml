<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main1bg"
    tools:context="com.example.fady.BILAMI.MainActivity">



    <ImageView
        android:id="@+id/imageView3"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/logoquiz" />

    <Button
        android:id="@+id/jou"
        style="@android:style/Widget.Button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="245dp"
        android:background="@drawable/btnmain"
        android:onClick="Go"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="SOLO GAME" />

    <Button

        android:textColor="@color/white"
        android:id="@+id/jou2"
        style="@android:style/Widget.Button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/jou"
        android:layout_alignTop="@+id/jou"
        android:layout_marginTop="67dp"
        android:background="@drawable/btnmain"
        android:textStyle="bold"
        android:textSize="20dp"
        android:onClick="GoSetting"
        android:text="SETTINGS" />

    <Button

        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/jou3"
        style="@android:style/Widget.Button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/jou2"
        android:layout_below="@+id/jou2"
      android:layout_marginTop="7dp"
        android:background="@drawable/btnmain"
        android:onClick="GoMulti"
        android:text="MULTIPLAYER" />

</RelativeLayout>
